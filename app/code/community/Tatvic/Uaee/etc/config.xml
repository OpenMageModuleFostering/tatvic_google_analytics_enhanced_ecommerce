<?xml version="1.0"?>
<config>
    <modules>
        <Tatvic_Uaee>
            <version>1.0.0</version>
        </Tatvic_Uaee>
    </modules>
    <global>
        <models>
            <tatvic_uaee>
                <class>Tatvic_Uaee_Model</class>
            </tatvic_uaee>
        </models>
        <blocks>
            <tatvic_uaee>
                <class>Tatvic_Uaee_Block</class>
            </tatvic_uaee>
        </blocks>
        <helpers>
            <tatvic_uaee>
                <class>Tatvic_Uaee_Helper</class>
				
            </tatvic_uaee>
        </helpers>
        <resources>
            <tatvic_uaee_setup>
                <setup>
                    <module>Tatvic_Uaee</module>
                </setup>
            </tatvic_uaee_setup>
        </resources>
		
		
		<events>
            <admin_system_config_changed_section_tatvic_uaee>
                <observers>
                    <tatvic_uaee>
                        <type>singleton</type>
                        <class>tatvic_uaee/observer</class>
                        <method>adminSystemConfigChangedSection</method>
                    </tatvic_uaee>
                </observers>
            </admin_system_config_changed_section_tatvic_uaee>
			
        </events>
		
		
	</global>
    <frontend>
        <layout>
            <updates>
                <tatvic_uaee>
                    <file>tatvic_uaee.xml</file>
                </tatvic_uaee>
            </updates>
        </layout>
		<events>
		
			<catalog_product_load_after>
				<observers>
					<Tatvic_Uaee_Model_Observer>
						<type>singleton</type>
						<class>tatvic_uaee/observer</class>
						<method>tatvicProductLoadAfter</method>
				   </Tatvic_Uaee_Model_Observer>
				</observers>
			</catalog_product_load_after>
			
			<catalog_block_product_list_collection>
				<observers>
					<Tatvic_Uaee_Model_Observer>
						<type>singleton</type>
						<class>tatvic_uaee/observer</class>
						<method>tatvicProductList</method>
				   </Tatvic_Uaee_Model_Observer>
				</observers>
			</catalog_block_product_list_collection>
			
            
		</events>
       
    
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <tatvic_uaee>
                                            <title>Tatvic Enhanced eCommerce Section</title>
                                        </tatvic_uaee>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <tatvic_uaee>
            <ecommerce>
                <transaction_id>id</transaction_id>
            </ecommerce>
			<general>
				<installMail>0</installMail>
				<uninstallMail>0</uninstallMail>
			</general>
        </tatvic_uaee>
    </default>
</config>